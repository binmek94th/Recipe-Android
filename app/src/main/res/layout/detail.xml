<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="260dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/detail_category"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/detail_duration"
        android:layout_width="87dp"
        android:layout_height="54dp"
        android:layout_marginStart="10dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/detail_category"
        app:layout_constraintTop_toTopOf="@+id/detail_category"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/detail_difficulty"
        android:layout_width="83dp"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/detail_duration"
        app:layout_constraintTop_toTopOf="@+id/detail_category"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/detail_description"
        android:layout_width="383dp"
        android:layout_height="157dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_duration"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/detail_ingredients"
        android:layout_width="409dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_description"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add To Favourite"
        app:layout_constraintTop_toBottomOf="@+id/detail_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
